@model MVCApplication.Models.UserModel
@{
    ViewData["Title"] = "Export to Excel";
}
<h1>@ViewData["Title"]</h1>

@using (Html.BeginForm("ExportToExcel", "Home", FormMethod.Post))
{
    <table cellpadding="0" cellspacing="0">
        <tr>
            <td>User id</td>
            <td>@Html.TextBoxFor(x => x.UserOptions.UserName)</td>
        </tr>
        <tr>
            <td colspan="2" align="center"><input type="submit" value="Show Details" /></td>
        </tr>
    </table>
}
